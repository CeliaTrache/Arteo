<div class="show-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "art_gallery_3.jpg", height: 100, crop: :fill %>')">
  <div class="art-piece-container">
    <h2><%= @art_piece.title %> <span class="artist">• <%= @art_piece.artist %> • </span><span class="size"><%= @art_piece.size %></span></h2>
    <img src="<%= @art_piece.picture %>"/>
    <div class="art-piece-infos">
      <div>
        <p>Description : <%= @art_piece.description %></p>
        <p>Category : <%= @art_piece.category %></p>
        <p>Painting Technic : <%= @art_piece.painting_technic %></p>
        <p></p>
      </div>
      <h2 class="art-piece-pricing" data-price="<%= @art_piece.unit_price %>"><%= @art_piece.unit_price %>€</h2>
    </div>

    <div class="container">
      <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
        <h2>Book this art piece</h2>

        <%= simple_form_for [ @art_piece, @booking ] do |f| %>
          <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker1"} %>
          <%= f.input :end_time, as: :string, required: false, input_html: {class: "datepicker2"} %>
          <%= f.button :submit, "Book", class: "btn btn-primary", data: { toggle: "modal", target: "#exampleModal" } %>
        <% end %>
        <div class="price mt-3"></div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Booking Confirmed !</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


