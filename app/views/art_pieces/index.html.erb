<h1>Our Art Pieces</h1>

<div class="cards">
  <% @art_pieces.each do |art_piece| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= art_piece.picture %>)">
      <%= art_piece.title %>
      <%= art_piece.unit_price %>
    </div>
  <% end %>
</div>
