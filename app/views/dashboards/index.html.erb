<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 p-5">
      <h1>My Bookings</h1>

      <ul>
      <% @bookings.each do |booking| %>
        <li>
          <%= booking.start_time %>
          <%= booking.end_time %> Painting:
          <%= link_to booking.art_piece.title, art_piece_path(booking.art_piece.id) %>
          <br>
          Painting owner:
          <%= booking.art_piece.user.first_name %>  <%= booking.art_piece.user.last_name %>
        </li>
        <% end %>
      </ul>
      <div class="btn-group">
				<%= link_to 'View all paintings', art_pieces_path, class: "btn btn-outline-primary" %>
			</div>
		</div>
	</div>
</div>
