<div class="show-container dashboard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "art_gallery_3.jpg", crop: :fill %>')">

  <div class="dashboard-container">

    <div class="dashboard-tab">
      <ul class="list-inline tabs-underlined">
        <li>
          <a href="" class="tab-underlined active" data-order="0">My Bookings</a>
        </li>
        <li>
          <a href="" class="tab-underlined" data-order="1">My Collection</a>
        </li>
      </ul>
    </div>

    <div class="contents">
      <%# <div class="flex-card"> %>
      <div class="content bookings">
        <div class="content-infos">
          <% @bookings.each do |booking| %>
          <ul class="dashboard-card">
          <div class="card-product">
            <div class="card-image">
              <img src="<%= booking.art_piece.picture %>">
            </div>
            <div class="card-title">
              <h2><%= link_to booking.art_piece.title, art_piece_path(booking.art_piece.id) %></h2>
            </div>
            <div class="card-dates">
              <p>dates</p>
            </div>
            <div class="card-price">
              <p><%= booking.price %> €</p>
            </div>
            <div class="card-statut">
              <p>statut</p>
            </div>
          </ul>
          <% end %>
        </div>
        <div class="btn btn-group">
          <%= link_to 'Book another painting', art_pieces_path, class: "btn btn-outline-dark" %>
        </div>
        <%# </div> %>
      </div>

      <div class="content collection inactive">
        <%# <div class="flex-card"> %>
        <div class="content-infos">
          <% @bookings.each do |booking| %>
          <ul class="dashboard-card">
            <div class="card-product">
              <div class="card-image">
                <img src="<%= booking.art_piece.picture %>">
              </div>
              <div class="card-title">
                <h2><%= link_to booking.art_piece.title, art_piece_path(booking.art_piece.id) %></h2>
              </div>
              <div class="card-dates">
                <p>dates</p>
              </div>
              <div class="card-price">
                <p><%= booking.price %> €</p>
              </div>
              <div class="card-statut">
                <div class="btn btn-group">
                  <%= link_to 'Accept', booking_accept_path(booking), method: :patch, class: "btn btn-outline-success" %>
                </div>
                <div class="btn btn-group">
                  <%= link_to 'Decline', booking_decline_path(booking), method: :patch, class: "btn btn-outline-danger" %>
                </div>
                  <%# <%= simple_form_for [ @art_piece, @booking ] do |f| %>
                    <%# <%= f.button :submit, "Accept", class: "btn btn-success", data: { toggle: "modal", target: "#exampleModal" } %>
                  <%# <% end %>
              </div>
            </div>
          </ul>
          <% end %>
        </div>
        <div class="btn btn-group">
          <%= link_to 'Post another painting', "#", class: "btn btn-outline-dark" %>
        </div>
        <%# </div> %>
      </div>
    </div>


  </div>
</div>
